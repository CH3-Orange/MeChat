<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:onClick="ChatMessageItemClick"
    android:foreground="?attr/selectableItemBackground" >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chatMessageHeadIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_action_head_icon_default"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatMessageUname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:text="测试测试测试"
            android:autoSizeTextType="uniform"
            android:textColor="@color/chat_name_default" />
        <TextView
            android:id="@+id/chatMessageDescription"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="聊天内容聊天内容聊天内容"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/chat_message_default"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="昨天"
            android:autoSizeTextType="uniform"
            android:layout_gravity="right"
            android:textColor="@color/chat_message_default"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/chatMessageTip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_action_read_done"/>

    </LinearLayout>

</LinearLayout>